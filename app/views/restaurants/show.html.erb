<div class= "container my-5">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>
  <p><%= @restaurant.category %></p>
  <br>
  <h2>
    <%= pluralize @restaurant.reviews.size, "review" %>
  </h2>


<div data-controller="insert-in-list">
  <div id="reviews" data-insert-in-list-target="items">
    <% if @restaurant.reviews.blank? %>
      Be the first to leave a review for <%= @restaurant.name %>
    <% else %>
      <% @restaurant.reviews.each do |review| %>
      <p id="review-<%= review.id %>">
        <p><%= review.content %></p>
        <p><%= review.rating %></p>
      <% end %>
    <% end %>
  </div>

  <form action= "/restaurant/1/review"></form>
    <%= simple_form_for([ @restaurant, @review ],
      data: {
      insert_in_list_target: 'form',
      action: 'submit->insert-in-list#send'}) do |f| %>      
    <%= f.input :content, placeholder: 'Add review', as: :text %>
    <%= f.input :rating, as: :integer %>
    <%= f.button :submit, class: 'btn btn-light' %>
    <% end %>
    <%= link_to 'Back', restaurants_path %> 
</div>
